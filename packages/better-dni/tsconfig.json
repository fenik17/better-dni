{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "module": "ES2015",
    "target": "ES5",
    "lib": ["es2015"],
    "noImplicitAny": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declarationDir": "./dist/types",
    "declaration": true,
    "rootDir": "./src",
    "typeRoots": [
      "./src/@types",
      "./node_modules/@types",
      "../../node_modules/@types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
